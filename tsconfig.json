{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Changed from "preserve" to better support JSX transformations in React 17+
    "incremental": true,
    "strict": true, // Enabling strict type-checking options
    "noEmit": true // Ensures TypeScript compiles files but does not output files, suitable for Next.js which handles transpilation
  },
  "include": [
    "next-env.d.ts", // Ensure this file exists for Next.js type declarations
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules", // Standard practice to exclude node_modules
    ".next/" // Exclude .next directory from TypeScript compilation to avoid type checking build output
  ]
}